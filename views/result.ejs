<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Travel Plan for <%= city %></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<div class="container py-5">
  <h1 class="mb-4 text-center">Travel Plan for <%= city %></h1>

  <% if(itinerary.days && itinerary.days.length) { %>
    <% itinerary.days.forEach((day, index) => { %>
      <div class="card mb-4 shadow-sm">
        <img src="<%= images[index] ? images[index].urls.small : 'https://via.placeholder.com/400' %>" class="card-img-top" alt="Image of <%= city %>">
        <div class="card-body">
          <h5 class="card-title">Day <%= index + 1 %></h5>

          <!-- Activities -->
          <ul class="list-group list-group-flush mb-2">
            <% day.activities.forEach(act => { %>
              <li class="list-group-item"><%= act %></li>
            <% }) %>
          </ul>

          <!-- Tips -->
          <button class="btn btn-outline-primary w-100 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#tips<%= index %>">View Tips</button>
          <div class="collapse" id="tips<%= index %>">
            <div class="card card-body"><%= itinerary.tips || "No tips available" %></div>
          </div>

          <!-- Restaurants -->
          <button class="btn btn-outline-success w-100 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#food<%= index %>">Food & Restaurants</button>
          <div class="collapse" id="food<%= index %>">
            <div class="card card-body">
              <% if(restaurants[index] && restaurants[index].length) { %>
                <ul>
                  <% restaurants[index].forEach(r => { %>
                    <li><%= r %></li>
                  <% }) %>
                </ul>
              <% } else { %>
                <p>No restaurant recommendations available.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>

  <div class="card bg-light p-3 mb-4 shadow-sm">
    <h5>Packing List</h5>
    <p><%= itinerary.packing ? itinerary.packing.join(', ') : "No packing suggestions" %></p>
  </div>

  <a href="/" class="btn btn-secondary w-100">Plan Another Trip</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/scripts.js"></script>
</body>
</html>

